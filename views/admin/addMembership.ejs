<body>

  <div class="form-card">
    <h2 class="form-title">Create Membership</h2>

    <form method="POST" action="/admin/add-membership">

      <div class="form-group">
        <label>Member Name</label>
        <input type="text" name="memberName" class="form-control" required>
      </div>

      <div class="form-group">
        <label>Start Date</label>
        <input type="date" name="startDate" class="form-control" required>
      </div>

      <button class="btn btn-primary w-100 mt-3">Create Membership</button>
    </form>

